{% extends 'JOYASJoyasBundle::base.html.twig' %}

{% block content -%}
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">
                Puntos de Venta
    			<a class="btn btn-primary" href="{{ path('puntoventa_new') }}">
    				Crear
    			</a>
			</h1>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<div class="tablasScroll">
		<table id="tablas" class="display">
            <thead>
                <tr>
                    <th>Descripcion</th>
                    <th>Numero</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.descripcion }}</td>
                    <td>{{ entity.numero }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('puntoventa_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i></a>
                        {% if entity.estado == 'A' %}
                        <a class="btn btn-danger" href="{{ path('puntoventa_delete', { 'id': entity.id }) }}"><i class="fa fa-times"></i></a>
                        {% else %}
                        <a class="btn btn-primary" href="{{ path('puntoventa_activar', { 'id': entity.id }) }}">Activar</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endblock %}
